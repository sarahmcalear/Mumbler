<div class="single-mumble">
  <h1>Pretty Mumble</h1>

  <% email_address = @mumble["author_email"].downcase %>
  <% hash = Digest::MD5.hexdigest(email_address) %>

  <div class="mumble">
    <div class="top">
      <img src="http://www.gravatar.com/avatar/<%=hash%>" alt="<%= @mumble["author_thumbnail"] %>">
      <%= @mumble["author_handle"] %>
    </div>

    <div class="main">
      <img src="<%= @mumble["image"] %>">
    </div>

    <ul>
      <div class="bottom">
        <li>#<%= @mumble["tags"] %></li>
        <li><%= @mumble["date"] %></li>
        <li id="text"><%= @mumble["text"] %></li>
        <li><p><%= likes_for(@id) %> &hearts; likes</p></li>
        <li><a href="/mumble/<%= @id %>?like=true"><button>&hearts; like</button></a></li>
      </div>
    </ul>

  </div>
</div>
